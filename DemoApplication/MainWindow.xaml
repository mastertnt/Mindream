<Window x:Class="DemoApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xckt="clr-namespace:Xceed.Wpf.Toolkit.PropertyGrid;assembly=Xceed.Wpf.Toolkit"
        xmlns:controls="clr-namespace:XGraph.Controls;assembly=XGraph"
        xmlns:xtlv="http://schemas.xray.com/wpf/xaml/xtreelistview"
        Title="MainWindow" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="250"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <xtlv:TreeListView PreviewMouseLeftButtonDown="List_PreviewMouseLeftButtonDown" 
          PreviewMouseMove="List_MouseMove" x:Name="mComponentDescriptorLibrary"></xtlv:TreeListView>
        <controls:GraphView x:Name="mGraph" Drop="OnDrop" AllowDrop="True" ItemsSource="{Binding Items}"  Grid.Column="1"></controls:GraphView>
        <xckt:PropertyGrid Grid.Column="2"></xckt:PropertyGrid>
    </Grid>
</Window>
